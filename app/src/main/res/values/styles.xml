<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/Titel</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ContentText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Custom_Cornner_Edge" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

</resources>